{
  "name": "freecad-desktop",
  "version": "0.1.0",
  "description": "FreeCAD Studio - KS Drawing + DFM + Tolerance + Cost all-in-one desktop app",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke:core": "node scripts/smoke-core.mjs",
    "verify": "npm test && npm run build && SMOKE_MOCK=1 BACKEND_PORT=18081 npm run smoke:core",
    "preview": "vite preview",
    "tauri": "tauri",
    "backend": "node backend/server.js",
    "start": "concurrently \"npm run backend\" \"npm run dev\""
  },
  "dependencies": {
    "@tauri-apps/api": "^2.2.0",
    "chart.js": "^4.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.172.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.3.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.0",
    "jsdom": "^28.0.0",
    "vite": "^6.1.0",
    "vitest": "^4.0.18"
  }
}
